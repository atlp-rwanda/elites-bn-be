{
  "name": "elites-bn-be",
  "version": "1.0.0",
  "description": "Barefoot nomad project",
  "main": "index.js",
  "repository": "https://github.com/atlp-rwanda/elites-bn-be.git",
  "author": "Honore IRADUKUNDA <ihonore01@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "babel src -d dist",
    "start": "npm run build && yarn migrate && yarn seed && better-npm-run prod",
    "dev": "yarn migrate && yarn seed && better-npm-run dev",
    "dev_": "better-npm-run dev",
    "test": "better-npm-run test",
    "lint": "eslint \"{src,apps,libs,test}/**/*.js\" --fix",
    "coverage": "yarn run test && better-npm-run cov",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo:all",
    "seed": "npx sequelize-cli db:seed:all",
    "seed:undo": "npx sequelize-cli db:seed:undo",
    "seed-location": "npx sequelize db:seed --seed 20220309194932-Location.js",
    "seed-role": "npx sequelize db:seed --seed 20220308144709-roles-seed.js",
    "seed-user": "npx sequelize db:seed --seed 20220309202416-User.js",
    "seed-accommodation": "npx sequelize db:seed --seed 20220309194916-Accommodation.js",
    "seed-room": "npx sequelize db:seed --seed 20220309194951-Room.js",
    "seed-refreshToken": "npx sequelize db:seed --seed 20220315140632-refreshTokenTables.js",
    "dbmigrate:all": "npx sequelize-cli db:migrate:undo:all && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all"
  },
  "betterScripts": {
    "dev": {
      "command": "nodemon  --exec npx babel-node ./src/app.js",
      "env": {
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "test": {
      "command": "yarn migrate  && nyc --reporter=text --reporter=lcov mocha --recursive --require @babel/polyfill --require @babel/register ./tests/*.js --timeout 500000000000 --exit || true",
      "env": {
        "NODE_ENV": "test",
        "PORT": 5000
      }
    },
    "prod": {
      "command": "node ./dist/app.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "cov": {
      "command": "nyc report --reporter=text-lcov | coveralls"
    }
  },
  "dependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/node": "^7.16.8",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.16.11",
    "@babel/register": "^7.17.0",
    "@hapi/joi": "^17.1.1",
    "@sendgrid/mail": "^7.6.2",
    "bcrypt": "^5.0.1",
    "bcryptjs": "^2.4.3",
    "better-npm-run": "^0.1.1",
    "cloudinary": "^1.28.1",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.0",
    "events": "^3.3.0",
    "express": "^4.17.3",
    "fs": "^0.0.1-security",
    "http-status-codes": "^2.2.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.4",
    "passport": "^0.5.2",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth2": "^0.2.0",
    "path": "^0.12.7",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "redis": "^4.0.4",
    "sequelize": "^6.17.0",
    "sequelize-cli": "^6.4.1",
    "sinon": "^13.0.1",
    "socket.io": "^4.4.1",
    "swagger-ui-express": "^4.3.0",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "coveralls": "^3.1.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "mocha": "^9.2.1",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0"
  }
}
