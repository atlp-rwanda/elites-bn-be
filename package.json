{
    "name": "elites-bn-be",
    "version": "1.0.0",
    "description": "Barefoot nomad project",
    "main": "index.js",
    "repository": "https://github.com/atlp-rwanda/elites-bn-be.git",
    "author": "Honore IRADUKUNDA <ihonore01@gmail.com>",
    "license": "MIT",
    "scripts": {
        "build": "babel src -d dist",
        "start": "npm run build && better-npm-run prod",
        "dev": "better-npm-run dev",
        "test": "better-npm-run test",
        "lint": "eslint \"{src,apps,libs,test}/**/*.js\" --fix",
        "coverage": "yarn run test && better-npm-run cov",
        "migrate": "npx sequelize-cli db:migrate",
        "migrate:undo": "sequelize-cli db:migrate:undo:all",
        "seed": "npx sequelize-cli db:seed:all",
        "seed:undo": "npx sequelize-cli db:seed:undo",
        "dbmigrate:all":"npx sequelize-cli db:migrate:undo:all && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all"
    },
    "betterScripts": {
        "dev": {
            "command": "nodemon  --exec npx babel-node ./src/app.js",
            "env": {
                "NODE_ENV": "development",
                "PORT": 3000
            }
        },
        "test": {
            "command": "nyc --reporter=html --reporter=text --reporter=lcov --reporter=text-summary --check-coverage=true mocha --require @babel/register ./tests/* --timeout 1000000 --exit || true",
            "env": {
                "NODE_ENV": "test",
                "PORT": 5000
            }
        },
        "prod": {
            "command": "node ./dist/app.js",
            "env": {
                "NODE_ENV": "production",
                "PORT": 8000
            }
        },
        "cov": {
            "command": "nyc report --reporter=text-lcov | coveralls"
        }
    },
    "dependencies": {
        "@babel/cli": "^7.17.6",
        "@babel/core": "^7.17.5",
        "@babel/node": "^7.16.8",
        "@babel/plugin-proposal-class-properties": "^7.16.7",
        "@babel/plugin-transform-runtime": "^7.17.0",
        "@babel/preset-env": "^7.16.11",
        "@babel/register": "^7.17.0",
        "@sendgrid/mail": "^7.6.1",
        "bcrypt": "^5.0.1",
        "bcryptjs": "^2.4.3",
        "better-npm-run": "^0.1.1",
        "cors": "^2.8.5",
        "date-fns": "^2.28.0",
        "dotenv": "^16.0.0",
        "express": "^4.17.3",
        "joi": "^17.6.0",
        "jsonwebtoken": "^8.5.1",
        "morgan": "^1.10.0",
        "pg": "^8.7.3",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.17.0",
        "swagger-ui-express": "^4.3.0"
    },
    "devDependencies": {
        "chai": "^4.3.6",
        "chai-http": "^4.3.0",
        "coveralls": "^3.1.1",
        "eslint": "^8.10.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^5.2.0",
        "mocha": "^9.2.1",
        "mocha-lcov-reporter": "^1.3.0",
        "nodemon": "^2.0.15",
        "nyc": "^15.1.0",
        "sequelize-cli": "^6.4.1"
    }
}
