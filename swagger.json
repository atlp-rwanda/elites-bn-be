					"type": "string"
				},
				"email": {
					"type": "string"
				},
				"password": {
					"type": "string"
				}
			}
		},
		"Login": {
			"type": "object",
			"in": "body",
			"required": ["email", "password"],
			"properties": {
				"email": {
					"type": "string"
				},
				"password": {
					"type": "string"
				}
			}
		},
		"UpdateRole": {
            "type": "object",
            "in":"body",
            "required": [ "email", "role"],
            "properties": {
                  "email": {
                      "type": "string"
                  }
                 
              }
          },
		"refreshToken": {
			"type": "object",
			"in": "body",
			"required": ["refreshToken"],
			"properties": {
				"refreshToken": {
					"type": "string"
				}
			}
		}
	}
